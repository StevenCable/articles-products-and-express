<form method="POST" action="/article/{{id}}?_method=PUT">
  <div class = "newArticle">
    <div id="{{id}}">
      <h1>Title: <input type="text" name="title" value="{{articles.title}}"></input></h1>
      <h2>Body: <input type="text" name="body" value="${{articles.body}}"> </input></h2>
      <h3>Author: <input type="text" name="author" value="{{article.author}}"></input></h3>
    </div>
  </div>
</form>